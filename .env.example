# Template file konfigurasi untuk Bot Telegram Warisan Islam
# Copy file ini menjadi .env dan isi dengan nilai yang sesuai

# Token Bot Telegram (dapatkan dari @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Konfigurasi Database (opsional, untuk fitur lanjutan)
DATABASE_URL=sqlite:///warisan.db

# Konfigurasi Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Konfigurasi Forward Chaining
FC_ENABLE_DETAILED_LOGGING=true
FC_VALIDATION_STRICT=true

# Konfigurasi Dempster-Shafer
DS_DEFAULT_RELIABILITY=0.8
DS_UNCERTAINTY_THRESHOLD=0.1
DS_ENABLE_PLAUSIBILITY=true

# Konfigurasi Bot
BOT_TIMEZONE=Asia/Jakarta
BOT_LANGUAGE=id
MAX_CONCURRENT_USERS=100

# Fitur Eksperimental (untuk pengembangan)
ENABLE_EXPORT_PDF=false
ENABLE_VISUALIZATION=false
ENABLE_WEB_INTERFACE=false